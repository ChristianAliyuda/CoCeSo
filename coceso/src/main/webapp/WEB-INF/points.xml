<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="autocomplete" class="at.wrk.coceso.service.point.MultipleAutocomplete">
    <constructor-arg>
      <list>
        <ref bean="jsonPoi"/>
        <ref bean="vcmGridSquare"/>
        <ref bean="viennaAutocomplete"/>
      </list>
    </constructor-arg>
  </bean>

  <bean id="locate" class="at.wrk.coceso.service.point.MultipleLocate">
    <constructor-arg>
      <list>
        <ref bean="jsonPoi"/>
        <ref bean="vcmGridSquare"/>
        <bean id="addressLocate" class="at.wrk.coceso.service.point.ViennaLocate"/>
      </list>
    </constructor-arg>
  </bean>

  <bean id="viennaAutocomplete" class="at.wrk.coceso.service.point.ViennaAutocomplete">
    <constructor-arg type="org.springframework.core.io.Resource" value="classpath:streetnames.csv"/>
    <!--
    <constructor-arg type="org.springframework.core.io.Resource"
                     value="http://data.wien.gv.at/daten/geo?service=WFS&amp;version=1.1.0&amp;request=GetFeature&amp;typeName=ogdwien:GEONAMENSVERZOGD&amp;propertyName=STR_NAME,BEZLISTE&amp;outputFormat=csv"/>
    -->
  </bean>

  <bean id="jsonPoi" class="at.wrk.coceso.service.point.JsonPoi">
    <constructor-arg type="org.springframework.core.io.Resource" value="classpath:poi.json"/>
  </bean>
  <bean id="vcmGridSquare" class="at.wrk.coceso.service.point.GridSquare">
    <constructor-arg index="0" value="VCM/Heldenplatz/"/>
    <!-- Base lat/lng (C10) -->
    <constructor-arg index="1" value="48.206114"/>
    <constructor-arg index="2" value="16.360507"/>
    <!-- Interval x lat/lng -->
    <constructor-arg index="3" value="1.80011E-4"/>
    <constructor-arg index="4" value="2.98551E-4"/>
    <!-- Interval y lat/lng -->
    <constructor-arg index="5" value="-1.99578E-4"/>
    <constructor-arg index="6" value="2.69281E-4"/>
    <!-- x from/to -->
    <constructor-arg index="7" value="C"/>
    <constructor-arg index="8" value="R"/>
    <!-- y from/to -->
    <constructor-arg index="9" value="10"/>
    <constructor-arg index="10" value="18"/>
  </bean>
</beans>
